<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover transition duration-500 ease-in-out hover:scale-105 transform"
            src="{{ product_product.featured_image | img_url: 'medium' }}"
            alt="{{ product_product.featured_image.alt }}"
          >
        </div>

      {% else %}
        {% assign placeholder_image = 'product-1' %}
        {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 object-cover object-center bg-gray-100' }}
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>
      <a class="text-gray-700 font-medium uppercase" href="{{ product_product.url }}">{{ product_product.title }}</a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>
