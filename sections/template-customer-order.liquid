<div class="max-w-6xl mx-auto px-4 py-12">
    <div class="flex items-start md:items-end justify-between my-5">
        <div class="w-1/2">
            <h1 class="text-2xl font-bold text-gray-700">Order {{ order.name }}</h1>
            <p class="text-gray-500 my-2">Placed on: {{ order.created_at | date: format: 'date' }}</p>
            <span class="text-sm text-white gb-gray-700 rounded-full px-4 py-1 my-2">{{ order.financial_status_label }}</span>
        </div>
        <a href="{{ routes.account_url }}" class="text-blue-400 hover:text-blue-700 underline font-medium">Back to Account Page</a>
    </div>
    <div>
        {% for line_item in order.line_items %}
            {{ line_item.product.title }}
        {% endfor %}
    </div>
</div>