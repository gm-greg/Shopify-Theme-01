<div class="max-w-6xl mx-auto px-4 py-12">
    <div class="flex items-start md:items-end justify-between my-5">
        <div class="w-1/2">
            <h1 class="text-2xl font-bold text-gray-700">Order {{ order.name }}</h1>
            <p class="text-gray-500 my-2">Placed on: {{ order.created_at | date: format: 'date' }}</p>
            <span class="text-sm text-white gb-gray-700 rounded-full px-4 py-1 my-2">{{ order.financial_status_label }}</span>
        </div>
        <a href="{{ routes.account_url }}" class="text-blue-400 hover:text-blue-700 underline font-medium">Back to Account Page</a>
    </div>
    <div>
        {% for line_item in order.line_items %}
            <div class="w-full border border-gray-200 rounded-sm mb-4 divide-y">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-12 p-4 md:p-12">
                    <div class="w-full min-h-80 rounded-md overflow-hidden bg-gray-200 border">
                        {% if line_item.image %}
                            TESTING
                            <img class="w-full h-full object-cover object-center" src="{{ line_item.image | img_url: 'medium' }}" alt="{{ line_item.image.alt }}">
                        {% else %}
                            {% 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover object-center' %}
                        {% endif %}
                    </div>
                    <div class="w-full">
                        
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>