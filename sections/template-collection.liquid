<div class="px-4 py-8">
  {% paginate collection.products by 6 %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for product in collection.products %}
          <div class="w-full py-6 px-3">
            <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <div class="h-80 overflow-hidden">
                    <img
                      class="w-full h-full object-cover"
                      src="{{ product.featured_image | img_url: 'medium' }}"
                      alt="{{ product.featured_image.alt }}"
                    >
                  </div>

                {% else %}
                  {% assign placeholder_image = 'lifestyle-2' %}
                  {{ placeholder_image | placeholder_svg_tag: 'object-cover object-center' }}
                {% endif %}
              </a>
              <div class="flex flex-col p-4">
                <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                <a class="text-gray-700 font-medium uppercase" href="{{ product.url }}">{{ product.title }}</a>
                <p class="text-gray-500">{{ product.price | money }}</p>
              </div>
            </div>
          </div>

        {% else %}
          <p class="font-medium">We're sorry, there are no products in this collection yet.</p>
        {% endfor %}
      </div>
    </div>

    <!--
      We render our pagination snippet, sending it the paginate object (created above) as a parameter. Inside the pagination
      snippet file, we use pagination as our variable. So here we pass the paginate object into the snippet, through the
      pagination variable.
    -->
    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>
