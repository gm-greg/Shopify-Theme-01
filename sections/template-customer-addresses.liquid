<div class="m-w-6xl mx-auto px-4 py-12">
    <div class="flex flex-cols md:flex-row items-center justify-between my-5 gap-4">
        <h1 class="text-2xl font-bold text-gray-700">Addresses</h1>
        <button class="text-white font-medium bg-gray-700 hover:bg-gray-900 px-6 py-2">Add New Address</button>
        <a href="{{ routes.account_url }}" class="text-blue-400 hover:text-blue-700 font-medium underline">Back to Your Account</a>
    </div>
    div.
    <div>
        {% paginate customer.addresses by 10 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 p-4 md:p-12 gap-4 lg:gap-12">
                {% for address in customer.addresses %}              
                    <div>
                        <div class="relative flex flex-col text-center p-2 border">
                            {% if address == customer.default_address %}
                                <span class="text-xs text-white bg-green-800 px-4 py-2 font-medium">Default Address</span>
                            {% endif %}
                            <div class="my-8 h-full">
                                {{ address | format_address }}
                            </div>
                            <div class="flex flex-row gap-2">
                                <button class="w-full text-sx text-white bg-gray-700 hover:bg-gray-900 font-medium py-2">Edit</button>
                                <button class="w-full text-sx text-white bg-red-700 hover:bg-red-900 font-medium py-2">Delete</button>
                            </div>
                        </div>
                        
                    </div>
                {% endfor %}  
            </div> 
            
            <div class="flex flex-col justify-center items-center">
                {% render 'pagination', pagination: paginate %}
            </div>

        {% endpaginate %}
    </div>
</div>