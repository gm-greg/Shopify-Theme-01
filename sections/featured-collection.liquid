<div class="flex flex-col items-center my-8">
  <h1 class="text-3xl text-center">{{ section.settings.title }}</h1>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {% for product in section.settings.featured_collection.products
        limit: section.settings.number_of_products_displayed
      %}
        {% render 'product-card', product_product: product %}
      {% else %}
        {% for item in (1..3) %}
          {% render 'product-card-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured Collection",
      "label": "Collection Title"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "number_of_products_displayed",
      "default": 6,
      "label": "Number of Products Shown in Collection",
      "min": 3,
      "max": 12
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ],
  "templates": ["article", "collection", "page", "index", "product"]
}
{% endschema %}
